@model List<Mario_Vukovic_Seminar.Models.ViewModel.ProductCategoryViewModel>
@{
    var counter = 1;
}
<h1>Category management</h1>

<a class="btn btn-primary" href="@Url.Action("CreateProductCategory", "Admin")">Add new product category</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>@category.Id</td>
                <td>@category.Title</td>
                <td>@category.Description</td>
                <td> @Html.ActionLink("Details","ProductCategoryDetails","Admin",new {id= category.Id},new {@class = "btn btn-success"})</td>
                <td> @Html.ActionLink("Edit","UpdateProductCategory","Admin",new {id= category.Id},new {@class = "btn btn-primary"})</td>
                <td> @Html.ActionLink("Delete","DeleteProductCategory","Admin",new {id= category.Id},new {@class = "btn btn-danger"})</td>
            </tr>
            counter++;

        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("AdminPanel", "Admin")">Back to admin panel</a>