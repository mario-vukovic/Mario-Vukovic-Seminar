@model List<Mario_Vukovic_Seminar.Models.ViewModel.ProductViewModel>
@{
    var counter = 1;
}
<h1>Product management</h1>

<a class="btn btn-primary" href="@Url.Action("CreateProduct", "Admin")">Add new product</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Product Category</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.ProductCategory.Title</td>
                <td> @Html.ActionLink("Details","ProductDetails","Admin",new {id= product.Id},new {@class = "btn btn-success"})</td>
                <td> @Html.ActionLink("Edit","UpdateProduct","Admin",new {id= product.Id},new {@class = "btn btn-primary"})</td>
                <td> @Html.ActionLink("Delete","DeleteProduct","Admin",new {id= product.Id},new {@class = "btn btn-danger"})</td>
            </tr>
            counter++;

        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("AdminPanel", "Admin")">Back to admin panel</a>
