@model List<Mario_Vukovic_Seminar.Models.ViewModel.ProductViewModel>

@foreach (var product in Model.OrderBy(x => Guid.NewGuid()).Take(10))
{
    <div class="card mb-3">
        <div class="card border-dark mb-3">
            <div class="row">
                <div class="col">
                    <img src="@product.ProductImgUrl" class="img-fluid rounded-start" alt="No image" style="width:320px; height:200px">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <a href="@Url.Action("Details", "Home",new {id = product.Id})" class="btn btn-success">Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}